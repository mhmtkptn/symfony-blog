{% extends "admin/admin.main.twig" %}
{% block contact %}active{% endblock %}
{% block body %}
    <h3>"{{ contact.title }}" Başlıklı Mesaj</h3>

    <div class="row marketing">
        <div class="col-md-12">
            <p>İletişim id: <span class="text-muted">{{ contact.id }}</span></p>
            <p>Ad Soyad: <span class="text-muted">{{ contact.nameSurname }}</span></p>
            <p>Ad Soyad: <span class="text-muted">{{ contact.eMail }}</span></p>
            <p>Başlık: <span class="text-muted">{{ contact.title }}</span></p>
            <p>Mesaj: <span class="text-muted">{{ contact.message }}</span></p>
            <p>Durumu: <span class="text-muted">{{ contact.status }}</span></p>
        </div>
        <div class="col-md-12">
            <a class="btn btn-outline-primary" href="{{ contact.id }}/edit">Düzenle</a>
        </div>
    </div>

    <div class="row marketing">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a class="btn btn-outline-primary" href="{{ path('contact_index') }}">Mesaj listesi</a>
            </div>
        </div>
    </div>

{% endblock %}
